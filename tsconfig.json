{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": [ "es2015", "es5", "dom" ],
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",

    "outDir": "./lib/",

    "declaration": true,

    "preserveSymlinks": true,

    "preserveWatchOutput": true,
    "pretty": false,

    "forceConsistentCasingInFileNames": true,

    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true
  },
  "include": [
      "./src.ts/*.ts"
  ],
  "exclude": [ ]
}
